<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF1004_2.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                 Margin="10,0,10,0">
        <Label Text="Please enter your name:" Margin="5,0,0,0"/>
        <Entry Text="{Binding keyin}"></Entry>
        <Button Text="送出" Command="{Binding btnCommand}"></Button>
        <Label Text="{Binding display}" HorizontalOptions="Center" FontSize="Large" />
    </StackLayout>

</ContentPage>